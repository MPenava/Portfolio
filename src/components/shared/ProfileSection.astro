---
import { H1, Large } from "../ui/typography";
import mpen from "@/assets/images/mpen.png";

import { Button } from "../ui/button";
import { StarSeparator } from "../shared/StarSeparator";
import { Calendar } from "lucide-react";
import { Image } from "astro:assets";

const calendarLink = "https://calendar.app.google/fZVKUKm8F2f6s15d8";
---

<section id="home" class="scroll-mt-24 bg-primary">
  <div class="container mx-auto max-w-7xl">
    <div
      class="flex flex-col items-center justify-between gap-8 py-20 sm:py-40"
    >
      <Image
        loading="eager"
        fetchpriority="high"
        src={mpen}
        alt="Profile image"
        class="size-60 rounded-full object-cover"
      />
      <div class="flex flex-col items-center gap-5">
        <H1>MARKO PENAVA</H1>
        <StarSeparator />
        <Large>React & React Native Developer</Large>
        <Button
          variant="secondary"
          size="lg"
          href={calendarLink}
          target="_blank"><Calendar />Book a Meeting</Button
        >
      </div>
    </div>
  </div>
</section>
