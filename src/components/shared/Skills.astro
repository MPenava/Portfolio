---
import { Progress } from "../ui/progress";
import { H1, H4, P } from "../ui/typography";
import { StarSeparator } from "./StarSeparator";
import { t } from "i18next";

const skills = [
  { name: "HTML", progress: 90 },
  { name: "CSS", progress: 80 },
  { name: "JavaScript", progress: 80 },
  { name: "Typescript", progress: 85 },
  { name: "React", progress: 90 },
  { name: "React Native", progress: 65 },
  { name: "Astro", progress: 80 },
  { name: "Vue.js", progress: 30 },
  { name: "PHP", progress: 45 },
  { name: "Laravel", progress: 45 },
];
---

<section id="skills" class="scroll-mt-24 py-16">
  <div class="container mx-auto flex max-w-7xl flex-col gap-16 px-4">
    <div class="flex flex-col items-center gap-2">
      <H1>{t("SKILLS.TITLE")}</H1>
      <StarSeparator />
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
      {
        skills.map((skill) => (
          <div class="flex flex-col gap-2">
            <div class="flex justify-between">
              <H4>{skill.name}</H4>
              <P>{skill.progress}%</P>
            </div>
            <Progress
              value={skill.progress}
              aria-label={`Skill ${skill.name}: ${skill.progress} percent`}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
