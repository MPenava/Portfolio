---
import { Image } from "astro:assets";
import { P } from "../ui/typography";
import { Muted } from "../ui/typography";
import { H4 } from "../ui/typography";
import { Button } from "../ui/button";

import linkedinLogo from "@/assets/images/media/linkedin.png";
import githubLogo from "@/assets/images/media/github.png";
import mailLogo from "@/assets/images/media/mail.png";
import { Earth, Mail, Phone } from "lucide-react";

const socialMediaLinks = [
  {
    id: "linkedin",
    href: "https://www.linkedin.com/in/marko-penava-5149721b9/",
    image: linkedinLogo,
  },
  {
    id: "github",
    href: "https://github.com/MPenava",
    image: githubLogo,
  },
  {
    id: "email",
    href: "mailto:penavamarko482@gmail.com",
    image: mailLogo,
  },
];

const phone = "+387 63 847 007";
const address = "Batin II 16 Posušje, BiH";
const copyright = "© 2025 Portfolio - All rights reserved.";
---

<footer>
  <div class="container pt-16">
    <div class="container mx-auto max-w-7xl">
      <div class="mx-10 grid gap-x-5 gap-y-6 md:grid-cols-3 md:gap-y-8">
        <div class="flex flex-col items-center gap-2">
          <div class="flex items-center gap-2">
            <Phone className="size-5" />
            <H4>Contact</H4>
          </div>
          <P>{phone}</P>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="flex items-center gap-2">
            <Earth className="size-5" />
            <H4>Around the Web</H4>
          </div>
          <div class="flex flex-row gap-3">
            {
              socialMediaLinks.map((media) => (
                <Button
                  variant="outline"
                  className="size-9 p-0"
                  href={media.href}
                  target="_blank"
                >
                  <Image alt={media.id} src={media.image} />
                </Button>
              ))
            }
          </div>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="flex items-center gap-2">
            <Mail className="size-5" />
            <H4>Address</H4>
          </div>
          <P>{address}</P>
        </div>
      </div>
    </div>
    <div class="mt-8 flex w-full justify-center border-t pt-4">
      <Muted>{copyright}</Muted>
    </div>
  </div>
</footer>
