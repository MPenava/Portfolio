---
import { H1, H4, Lead } from "../ui/typography";
import { Separator } from "@/components/ui/separator";
import { StarSeparator } from "./StarSeparator";

type TimelineEntry = {
  date: string;
  title: string;
};

const timelineData: TimelineEntry[] = [
  {
    date: "Oct 2018 - Nov 2021",
    title:
      "Bachelor of Computer Science, Faculty of Natural Sciences, Mathematics and Education at Mostar",
  },
  {
    date: "Nov 2021 - Nov 2023",
    title:
      "Master of Computer Science, Faculty of Natural Sciences, Mathematics and Education at Mostar",
  },
  {
    date: "Jan 2024 - now",
    title: "Frontend Developer at Inovia",
  },
];
---

<section id="education" class="scroll-mt-24 bg-white py-16">
  <div
    class="container mx-auto flex max-w-7xl flex-col justify-center gap-16 px-4"
  >
    <div class="flex flex-col items-center gap-2">
      <H1 className="text-secondary">EDUCATION & CAREER</H1>
      <StarSeparator variant="secondary" />
    </div>
    <div>
      <div class="container">
        <div class="relative mx-auto max-w-4xl">
          <Separator
            orientation="vertical"
            className="absolute left-2 top-4 bg-muted"
          />
          {
            timelineData.map((entry) => (
              <div class="relative mb-6 pl-5 xl:mb-10">
                <div class="absolute left-0 top-3.5 flex size-4 items-center justify-center rounded-full bg-secondary" />
                <H4 className="text-accent rounded-xl px-3 py-2">
                  {entry.title}
                </H4>
                <Lead className="px-4">{entry.date}</Lead>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
