---
import Footer from "@/components/shared/Footer.astro";
import Header from "@/components/shared/Header.astro";
import i18next from "i18next";
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="MPenava | Portfolio" />
    <meta name="description" content="MPenava | Portfolio" />
    <meta property="og:title" content="Marko Penava â€” Portfolio" />
    <meta property="og:description" content="Portfolio" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />
    <title>MPenava | Portfolio</title>
    <script is:inline>
      const supported = ["en", "hr"];
      const locale =
        localStorage.getItem("lang") || navigator.language.split("-")[0];
      const selected = supported.includes(locale) ? locale : "hr";

      if (location.pathname === "/" && selected !== "hr") {
        location.replace(`/${selected}`);
      }
    </script>
  </head>
  <body>
    <Header />
    <div class="flex flex-col">
      <slot />
      <Footer />
    </div>
  </body>
</html>
<script src="@/components/lib/annotate.ts"></script>
